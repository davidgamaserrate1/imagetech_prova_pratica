
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//float
model SimpleProduct{
  id Int @id @default(autoincrement())
  name String?  @unique
  description String?
  value Int   
  
}

model DigitalProduct{
  id Int @id @default(autoincrement())
  name String?  @unique
  description String?
  value Int
  linkDownload String
}

model ConfigurableProduct {
  id          Int       @id @default(autoincrement())
  name String?  @unique
  description String?
  value       Int
  size        String
  color       String
  
}

model Group {
  id         Int       @id @default(autoincrement())
  name       String?
  description String?
  value      Int
  group_itens GroupedProduct[]
}

model GroupedProduct {
  id              Int      @id @default(autoincrement())
  name            String?
  description     String?
  value           Int
  groupId         Int
  group           Group? @relation(fields: [groupId], references: [id])
  simpleProductId Int
}
